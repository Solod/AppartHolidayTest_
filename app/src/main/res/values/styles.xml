<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="style_text_data">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/color_text_ligth_blue</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="MyRatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/color_stars_active</item>
        <item name="colorControlActivated">@color/color_stars_active</item>
        <item name="android:minHeight">36dp</item>
    </style>
</resources>
